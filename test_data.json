{
  "test_cases": {
    "test_1": {
      "description": "Test email notification when simulated price is below current price and exceeds threshold",
      "input": {
        "email": "leomont677@gmail.com",
        "stock_rule": {
          "symbol": "AAPL",
          "threshold": 5.0
        },
        "simulation": {
          "symbol": "AAPL",
          "price": 160.00
        },
        "current_market_price": 180.00,
        "expected_price_change": -11.11,
        "should_trigger_email": true,
        "direction": "decrease"
      }
    },
    "test_2": {
      "description": "Test no email notification when simulated price doesn't exceed threshold",
      "input": {
        "email": "leomont677@gmail.com",
        "stock_rule": {
          "symbol": "AAPL",
          "threshold": 5.0
        },
        "simulation": {
          "symbol": "AAPL",
          "price": 182.00
        },
        "current_market_price": 180.00,
        "expected_price_change": 1.11,
        "should_trigger_email": false,
        "direction": "increase"
      }
    },
    "test_3": {
      "description": "Test email notification when simulated price is above current price and exceeds threshold",
      "input": {
        "email": "leomont677@gmail.com",
        "stock_rule": {
          "symbol": "AAPL",
          "threshold": 5.0
        },
        "simulation": {
          "symbol": "AAPL",
          "price": 200.00
        },
        "current_market_price": 180.00,
        "expected_price_change": 11.11,
        "should_trigger_email": true,
        "direction": "increase"
      }
    }
  }
}
